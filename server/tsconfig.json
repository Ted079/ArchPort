{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  // "include": ["src/**/*", "../shared/**/*"],
  "include": ["src/**/*", "src/types/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}


